<%- include('../includes/head.ejs') %>
  <%- include('../includes/navigation.ejs') %>
  <div class="row">
    <%- include('../shared/flash_message', 
      { flashMessage: flashMessage, isSuccessFlashMessage: isSuccessFlashMessage }) %>

    <div class="d-flex justify-content-between mt-5">
      <div class="float-start-div"><p class="heading">Stores</p></div>
      <div class=" d-flex float-end-div">
        <a href="/admin/new-store">Add Store</a>
      </div>
    </div>

    <table class="table">
      <thead>
        <tr>
          <th scope="col">ID NO</th>
          <th scope="col">NAME</th>
          <th scope="col">ADDRESS</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% for (let store of stores) { %>
          <tr>
            <td><%= store._id %></td>
            <td><%= store.name %></td>
            <td>
              <%= store.address1 %> <%= store.address2 %>, <%= store.city %>, 
              <%= store.state %>,  <%= store.country %> <%= store.zip %>
            </td>
            <td class="row">
              <div class="col-3"><a href="/admin/users?store_id=<%= store._id %>" class="btn btn-primary">Show</a></div>
              <div class="col-3"><a href="/admin/edit-store/<%= store._id %>" class="btn btn-primary">Edit</a></div>
              <div class="col-3">
                <form class="col-3" action="/admin/delete-store" method="POST">
                  <input type="hidden" value="<%= store._id %>" name="store_id">
                  <button class="btn btn-primary" type="submit">Delete</button>
                </form>
              </div>
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
<%- include('../includes/end.ejs') %>
