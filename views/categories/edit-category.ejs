<%- include('../includes/head.ejs') %>
  <%- include('../includes/navigation.ejs') %>
  <%- include('../shared/store_nested_navigation', { store: store, nestedData: nestedData }) %>
  <main>
    <form class="store-form" action="/admin/<% if (editing) { %>update-category<% } else { %>create-category<% } %>" 
      method="POST">
      <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" name="name" id="name" class="form-control" value="<% if (editing) { %><%= category.name %><% } %>">
      </div>

      <input type="hidden" value="<%= store._id %>" name="store">

      <% if (editing) { %>
        <input type="hidden" value="<%= category._id %>" name="category_id">
      <% } %>

      <button class="btn btn-primary" type="submit"><% if (editing) { %>Update Category<% } else { %>Add Category<% } %></button>
    </form>
  </main>
<%- include('../includes/end.ejs') %>
